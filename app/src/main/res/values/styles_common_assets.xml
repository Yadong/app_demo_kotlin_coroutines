<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button_Primary_Small" parent="@style/Button_Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/app_general_l</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/app_general_xs</item>
        <item name="android:paddingBottom">@dimen/app_general_xs</item>
        <item name="android:paddingStart">@dimen/app_general_s</item>
        <item name="android:paddingEnd">@dimen/app_general_s</item>
        <item name="cornerRadius">@dimen/app_general_m</item>
    </style>

    <style name="Button_Primary" parent="@style/Widget.Button">
        <item name="android:textAppearance">@style/Font_Button</item>
        <item name="android:textColor">@color/button_primary_color</item>
        <item name="iconTint">@color/button_primary_color</item>
        <item name="android:backgroundTint">@color/button_primary_background_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="minWidth">@dimen/zero</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Font_Detail_Bold</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:backgroundTint">@color/white_primary</item>
    </style>

    <style name="Button_Secondary_Small" parent="@style/Button_Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/app_general_l</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/app_general_xs</item>
        <item name="android:paddingBottom">@dimen/app_general_xs</item>
        <item name="android:paddingStart">@dimen/app_general_s</item>
        <item name="android:paddingEnd">@dimen/app_general_s</item>
        <item name="cornerRadius">@dimen/app_general_m</item>
    </style>

    <style name="Button_Secondary" parent="@style/Widget.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Font_Button</item>
        <item name="android:textColor">@color/button_secondary_color</item>
        <item name="iconTint">@color/button_secondary_color</item>
        <item name="android:backgroundTint">@color/button_secondary_background_color</item>
        <item name="strokeColor">@color/button_secondary_stroke_color</item>
        <item name="strokeWidth">@dimen/one</item>
        <item name="android:textAllCaps">false</item>
        <item name="minWidth">@dimen/zero</item>
    </style>

    <style name="Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Font_Detail_Bold</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
    </style>

    <!--Universal Divider Styles-->
    <style name="Divider1">
        <item name="android:background">@color/gray_tertiary</item>
        <item name="android:layout_height">@dimen/one</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>